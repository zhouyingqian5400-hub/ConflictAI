/**index.wxss - 首页样式**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  min-height: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 标题区域 */
.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  align-items: center;
  margin-bottom: 80rpx;
  background-color:#ffffff;
}

.logo {
  width: 300rpx;
  height: 100rpx; /* 根据你的logo实际高度调整 */
  max-width: 100%;
  margin-bottom: 40rpx;
  display: block;
}

.logo.white-bg {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40px;
  font-weight: bold;
  color: #3F37C9;
  margin-bottom: 24rpx;
  text-align: center;
}

.subtitle {
  font-size: 16px;
  font-weight: bold;
  color: #64748B;
  text-align: center;
  line-height: 1.6;
}

/* 区块样式 */
.section {
  width: 100%;
  margin-bottom: 60rpx;
}

.section-label {
  font-size: 16px;
  font-weight: bold;
  color: #2B2D42;
  margin-bottom: 24rpx;
}

/* 聊天室代码输入 */
.code-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.code-input {
  flex: 1;
  height: 88rpx;
  font-size: 16px;
  color: #2B2D42;
  padding: 0;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  border-radius: 50%;
  background-color: #F1F5F9;
}

.refresh-icon {
  font-size: 32rpx;
}

/* AI模型选项 */
.model-options {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
}

.model-option {
  flex: 1;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 4rpx solid transparent;
  transition: all 0.3s;
}

.model-option.active {
  border-color: #3F37C9;
  background-color: #F0EFFF;
}

.model-text {
  font-size: 16px;
  font-weight: bold;
  color: #2B2D42;
}

/* 进入聊天室按钮 */
.enter-btn {
  width: 100%;
  height: 96rpx;
  background-color: #3F37C9;
  color: #FFFFFF;
  font-size: 18px;
  font-weight: bold;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(63, 55, 201, 0.3);
}

.enter-btn.loading {
  opacity: 0.7;
}

.enter-btn::after {
  border: none;
}
