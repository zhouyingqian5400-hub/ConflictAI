/**chat.wxss - 聊天室页面样式**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
}

.chat-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

/* 头部信息 */
.chat-header {
  background-color: #FFFFFF;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #E5E7EB;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 等待状态横幅 */
.waiting-banner {
  background-color: #FFF3CD;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #FFE69C;
  text-align: center;
}

.waiting-text {
  font-size: 14px;
  color: #856404;
  font-weight: 500;
}

.header-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.room-code {
  font-size: 14px;
  color: #64748B;
}

.model-tag {
  font-size: 16px;
  font-weight: bold;
  color: #3F37C9;
}

.header-actions {
  display: flex;
  align-items: center;
}

.prompt-btn {
  padding: 12rpx 24rpx;
  background-color: #F1F5F9;
  border-radius: 8rpx;
  font-size: 14px;
  color: #2B2D42;
}

/* 消息列表 */
.messages-container {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
  box-sizing: border-box;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-text {
  font-size: 16px;
  color: #94A3B8;
  text-align: center;
}

/* 消息项 */
.message-item {
  display: flex;
  margin: 20rpx 30rpx;
  flex-direction: column;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-message {
  align-items: flex-end;
}

.ai-message {
  align-items: flex-start;
}

/* 消息气泡 */
.message-bubble {
  max-width: 90%;
  min-width: 120rpx;
  padding: 24rpx 28rpx;
  border-radius: 18rpx 18rpx 4rpx 18rpx;
  position: relative;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  /* 不设置 overflow，让内容完整显示 */
}

.user-message .message-bubble {
  background-color: #3F37C9;
  color: #FFFFFF;
  border-bottom-right-radius: 4rpx;
}

.ai-message .message-bubble {
  background-color: #FFFFFF;
  color: #2B2D42;
  border: 1rpx solid #E5E7EB;
  border-bottom-left-radius: 4rpx;
}

.message-bubble.thinking {
  background-color: #F1F5F9;
  color: #64748B;
}

.message-bubble.error {
  background-color: #FEE2E2;
  color: #DC2626;
  border-color: #FCA5A5;
}

.message-content-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.message-content {
  font-size: 16px;
  line-height: 1.6;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
  display: block;
  width: 100%;
  box-sizing: border-box;
  max-width: 100%;
  min-width: 0;
  flex: 0 0 auto;
  margin-bottom: 12rpx;          /* 与复制按钮分开 */
}

.message-actions {
  display: none;                 /* 隐藏旧的 actions 容器 */
}

.copy-btn {
  font-size: 12px;
  color: #64748B;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
  display: inline-block;
  flex-shrink: 0;
  align-self: flex-start;        /* 左对齐 */
  margin-top: 0;                 /* 紧跟在文本后面 */
}

.user-message .copy-btn {
  color: rgba(255, 255, 255, 0.8);
  background-color: rgba(255, 255, 255, 0.2);
}

.message-time {
  font-size: 12px;
  color: #94A3B8;
  margin-top: 8rpx;
  padding: 0 8rpx;
}

/* 输入区 */
.input-container {
  background-color: #FFFFFF;
  border-top: 1rpx solid #E5E7EB;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

.input-textarea {
  flex: 1;
  min-height: 80rpx;
  max-height: 400rpx;
  padding: 20rpx 24rpx;
  background-color: #F8F9FA;
  border-radius: 12rpx;
  font-size: 16px;
  color: #2B2D42;
  line-height: 1.5;
  border: 1rpx solid #E5E7EB;
  box-sizing: border-box;
  overflow-y: auto;
  word-wrap: break-word;
  word-break: break-all;
}

.send-btn {
  width: 80rpx;
  min-width: 80rpx;
  height: 80rpx;
  background-color: #3F37C9;
  color: #FFFFFF;
  font-size: 14px;
  font-weight: bold;
  border-radius: 12rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  padding: 0;
}

.send-btn.disabled {
  background-color: #CBD5E1;
  color: #94A3B8;
}

.send-btn::after {
  border: none;
}

/* Prompt弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E7EB;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: #2B2D42;
}

.modal-close {
  font-size: 40px;
  color: #94A3B8;
  line-height: 1;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.prompt-text {
  font-size: 14px;
  color: #2B2D42;
  line-height: 1.8;
  white-space: pre-wrap;
}
